<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lidaning.demo.undo.UndoLogMapper">
    
    <resultMap type="com.lidaning.demo.undo.UndoLog" id="UndoLogResult">

        <result property="id"    column="id"    />
        <result property="branchId"    column="branch_id"    />
        <result property="xid"    column="xid"    />
        <result property="context"    column="context"    />
        <result property="rollbackInfo"    column="rollback_info"    />
        <result property="logStatus"    column="log_status"    />
        <result property="logCreated"    column="log_created"    />
        <result property="logModified"    column="log_modified"    />
        <result property="ext"    column="ext"    />
        
    </resultMap>

    <sql id="selectUndoLogVo">
        select id as id, branch_id as branchId, xid as xid, context as context, rollback_info as rollbackInfo, log_status as logStatus, log_created as logCreated, log_modified as logModified, ext as ext  from undo_log
    </sql>

    <select id="selectUndoLogById" parameterType="String" resultMap="UndoLogResult">
        <include refid="selectUndoLogVo"></include>
        where id = #{id}
    </select>

    <select id="selectUndoLogList" parameterType="com.lidaning.demo.undo.UndoLog" resultMap="UndoLogResult">
        <include refid="selectUndoLogVo"/>
        <where>

            <if test="id != null and id.trim() != ''"> and id = #{id}</if>
            <if test="branchId != null and branchId.trim() != ''"> and branch_id = #{branchId}</if>
            <if test="xid != null and xid.trim() != ''"> and xid = #{xid}</if>
            <if test="context != null and context.trim() != ''"> and context = #{context}</if>
            <if test="rollbackInfo != null and rollbackInfo.trim() != ''"> and rollback_info = #{rollbackInfo}</if>
            <if test="logStatus != null and logStatus.trim() != ''"> and log_status = #{logStatus}</if>
            <if test="logCreated != null and logCreated.trim() != ''"> and log_created = #{logCreated}</if>
            <if test="logModified != null and logModified.trim() != ''"> and log_modified = #{logModified}</if>
            <if test="ext != null and ext.trim() != ''"> and ext = #{ext}</if>
            
        </where>
    </select>
    
    <insert id="insertUndoLog" parameterType="com.lidaning.demo.undo.UndoLog">
        insert into undo_log
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="id != null and id != ''">id,</if>
            <if test="branchId != null and branchId != ''">branch_id,</if>
            <if test="xid != null and xid != ''">xid,</if>
            <if test="context != null and context != ''">context,</if>
            <if test="rollbackInfo != null and rollbackInfo != ''">rollback_info,</if>
            <if test="logStatus != null and logStatus != ''">log_status,</if>
            <if test="logCreated != null and logCreated != ''">log_created,</if>
            <if test="logModified != null and logModified != ''">log_modified,</if>
            <if test="ext != null and ext != ''">ext,</if>
            
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">

            <if test="id != null and id != ''">#{id},</if>
            <if test="branchId != null and branchId != ''">#{branchId},</if>
            <if test="xid != null and xid != ''">#{xid},</if>
            <if test="context != null and context != ''">#{context},</if>
            <if test="rollbackInfo != null and rollbackInfo != ''">#{rollbackInfo},</if>
            <if test="logStatus != null and logStatus != ''">#{logStatus},</if>
            <if test="logCreated != null and logCreated != ''">#{logCreated},</if>
            <if test="logModified != null and logModified != ''">#{logModified},</if>
            <if test="ext != null and ext != ''">#{ext},</if>
            
         </trim>
    </insert>

    <update id="updateUndoLog" parameterType="com.lidaning.demo.undo.UndoLog">
        update undo_log
        <trim prefix="SET" suffixOverrides=",">

            <if test="id != null and id != ''">id = #{id},</if>
            <if test="branchId != null and branchId != ''">branch_id = #{branchId},</if>
            <if test="xid != null and xid != ''">xid = #{xid},</if>
            <if test="context != null and context != ''">context = #{context},</if>
            <if test="rollbackInfo != null and rollbackInfo != ''">rollback_info = #{rollbackInfo},</if>
            <if test="logStatus != null and logStatus != ''">log_status = #{logStatus},</if>
            <if test="logCreated != null and logCreated != ''">log_created = #{logCreated},</if>
            <if test="logModified != null and logModified != ''">log_modified = #{logModified},</if>
            <if test="ext != null and ext != ''">ext = #{ext},</if>
            
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUndoLogById" parameterType="String">
        delete from undo_log where id = #{id}
    </delete>

    <delete id="deleteUndoLogByIds" parameterType="String">
        delete from UndoLog where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>